platform :ios, '16.0'

require_relative '../node_modules/react-native/scripts/react_native_pods'

use_frameworks! :linkage => :static
# ❌ Remove global `use_modular_headers!` to prevent duplicate issues

target 'EchoPro' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :new_arch_enabled => false,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # ✅ Keep modular headers here only if needed
  pod 'RNFBApp', :path => '../node_modules/@react-native-firebase/app', :modular_headers => true
  pod 'RNFBAuth', :path => '../node_modules/@react-native-firebase/auth', :modular_headers => true

  post_install do |installer|
    react_native_post_install(installer)

    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      end
    end
  end
end
